<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GithubApp" parent="Theme.Material3.DayNight.NoActionBar">
<!--         Customize your light theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
    </style>



    <style name="Theme.GithubApp" parent="Base.Theme.GithubApp" />

    <style name="PlaceHolderTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/textplaceholdercolor</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NormalTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="singleLine">true</item>
        <item name="android:ellipsize">end</item>

    </style>
</resources>